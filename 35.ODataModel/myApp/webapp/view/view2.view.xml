<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form='sap.ui.layout.form'
    xmlns:more="sap.ui.core"
    controllerName="fiori.comp.syz.fa.controller.view2"
>
    <Page
        title="{CATEGORY}"
        showNavButton="true"
        navButtonPress="goBack"
    >
        <ObjectHeader
            intro="{PRODUCT_ID}"
            title="{NAME}"
            icon="{PRODUCT_PIC_URL}"
        />

        <IconTabBar>
            <items>
                <IconTabFilter
                    icon="sap-icon://appointment"
                    text="Appointment"
                >
                    <more:Fragment
                        fragmentName="fiori.comp.syz.fa.fragment.moreInfo"
                        type="XML"
                    />
                </IconTabFilter>
                <IconTabFilter
                    icon="sap-icon://attachment"
                    text="Attach a file"
                >
                    <more:Fragment
                        fragmentName="fiori.comp.syz.fa.fragment.attachment"
                        type="XML"
                    />
                </IconTabFilter>
                <IconTabFilter
                    icon="sap-icon://bell"
                    text="Notify"
                >
                    <Select items="{/ProductSet}">
                        <items>
                            <core:Item
                                key="price"
                                text="{PRICE}"
                            />
                        </items>
                    </Select>
                </IconTabFilter>
            </items>
        </IconTabBar>

        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    text="Save"
                    type="Accept"
                    press="onSave"
                />
                <Button
                    text="Cancel"
                    type="Reject"
                    press="onCancel"
                />
            </Toolbar>
        </footer>

        <!-- <Button text="goBack" press="goBack"></Button> -->
    </Page>
</mvc:View>
